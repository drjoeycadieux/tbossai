---
import "../styles/tailwind.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/tboss.png" type="image/png" />
    <title>Tboss AI</title>
  </head>

  <body class="bg-gray-900 text-gray-300 flex flex-col min-h-screen">
    <main class="flex-grow overflow-y-auto p-6">
      <div class="flex justify-center items-center space-x-4 mb-6">
        <img src="/tboss.png" alt="Tboss AI Logo" class="w-16 h-16 rounded shadow-lg" />
        <h1 class="text-6xl font-extrabold text-gray-100">Tboss AI</h1>
      </div>
      <div class="output bg-gray-800 shadow-lg rounded-xl p-6 text-gray-300 text-lg">
        <p>(Results will appear here)</p>
      </div>
    </main>

    <form class="bg-gray-800 shadow-lg fixed bottom-0 left-0 right-0 p-6 flex flex-col items-center">
      <div class="relative w-full max-w-4xl mb-4">
        <label for="modelSelect" class="block text-gray-300 font-bold text-lg mb-2">Models:</label>
        <select
          id="modelSelect"
          name="model"
          class="w-full bg-gray-700 text-gray-300 border border-gray-600 rounded-lg p-4 text-xl outline-none focus:ring-4 focus:ring-gray-500"
        >
          <option value="gemini-1.5-flash">gemini-1.5-flash</option>
          <option value="gemini-1.5-flash-8b">gemini-1.5-flash-8b</option>
          <option value="gemini-1.5-pro">gemini-1.5-pro</option>
        </select>
      </div>

      <div class="relative w-full max-w-4xl">
        <input
          name="prompt"
          placeholder="Message TbossAI"
          type="text"
          required
          class="w-full bg-gray-700 text-gray-300 border border-gray-600 rounded-lg p-4 text-xl pr-20 outline-none focus:ring-4 focus:ring-gray-500 h-16 placeholder-gray-500"
        />
        <button
          type="submit"
          class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-blue-600 text-white font-semibold px-4 py-2 rounded-lg hover:bg-blue-700 transition h-12 flex items-center justify-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>
      </div>
    </form>

    <!-- Link to the TypeScript file that Astro will bundle -->
    <script type="module" src="/src/scripts/main.ts"></script>
  </body>
</html>
